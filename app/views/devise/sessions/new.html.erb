<div class="panel panel-primary">
  <div class="panel-heading">
    <h1 class="panel-title">Log In</h1>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= flash_messages %>
      
      <div class="form-group label-floating">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, required: 'required' %>
      </div>

      <div class="form-group label-floating">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "off", required: 'required', minlength: 6 %>
        <% if @minimum_password_length %>
          <span class="help-block">Please enter <%= @minimum_password_length %> or more characters</span>
        <% end %>
      </div>
      
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %> Remember me
            <% end %>
          </div>
        </div>
      <% end -%>
      
      <%= f.submit "Log in", class: 'btn btn-raised btn-primary' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-raised btn-link' %><br />
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-link' %>
      
    <% end %>
  </div>
</div>
